<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tags %>
  <%=  render 'layouts/stylesheets' %>
</head>
<body>

<%=  render 'layouts/header' %>
<div class="container">
  <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert alert-#{name}") %>
  <% end %>
  <%= yield %>
  <div id="toTop">^ Back to Top</div>
  <%= render 'layouts/footer' %>
</div>

</body>
</html>
